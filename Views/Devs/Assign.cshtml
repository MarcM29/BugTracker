@model BugTracker.Models.Dev

@{
    ViewBag.Title = "Assign a developer";
}

<h4>Assign a developer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DevName" class="control-label"></label>
                <input asp-for="DevName" class="form-control" />
                <span asp-validation-for="DevName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedTicketId" class="control-label"></label>
                <input style="background-color: lightgrey;" asp-for="AssignedTicketId" value="@ViewBag.TicketID" class="form-control" readonly/>
                <span asp-validation-for="AssignedTicketId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Tickets</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
