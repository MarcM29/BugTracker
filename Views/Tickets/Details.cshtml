@model BugTracker.Models.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Ticket Details</h1>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketPriority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketPriority)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsersName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsersName)
        </dd>
    </dl>
</div>
<form asp-controller="Devs" asp-action="Assign">
<div class="form-group">
    <label for="TicketID" class="control-label"></label>
    <input type="hidden" name="TicketID" value="@Model.Id" class="form-control" readonly/>
</div>
<div class="form-group">
    <input type="submit" value="Assign a dev" class="btn btn-primary" />
</div>
</form>



<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">All Tickets</a> |
    <a asp-controller="Devs" asp-action="SpecificAssignments" asp-route-id="@Model.Id">See Assigned Developers</a>
</div>
