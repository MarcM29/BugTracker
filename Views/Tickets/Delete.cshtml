@model BugTracker.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<h1>Close Ticket</h1>

<h3>Are you sure you want to mark this ticket as resolved and close it?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketPriority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketPriority)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsersName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsersName)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Close" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Tickets</a>
    </form>



</div>
